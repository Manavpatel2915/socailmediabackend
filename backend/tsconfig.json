{
  "compilerOptions": {
    "target": "ES2020",

    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "rootDir": "./src",
    "outDir": "./dist",

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "sourceMap": true,
    "strict": false,
    "skipLibCheck": true
  },

  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "eslint.config.mts"
  ]
}
